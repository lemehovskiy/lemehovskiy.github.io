- var pages = [{name: 'Home', url: 'index.html'}, {name: 'lem-youtube', url: 'lem-youtube.html'}, {name: 'Contact', url: 'contact.html'}];


block sharedVars

doctype html
html
  head
    meta(charset = 'utf-8')
    meta(name='viewport', content="initial-scale=1.0, width=device-width")
    title
      block title

  body(class=page_name_slug)
    header
      .container
        .wp-navbar-head
          a.logo(href='/')
            | lem
          button.wp-navbar-toggle(type='button')
            .animate-burger
              span.top
              span.middle
              span.bottom
        .wp-navbar-collapse
          ul.nav
            each i in pages
              li.menu-item(class={active: page_url == i.url})
                a(href=i.url)= i.name

    #page.page(class=page_name_slug)
      block main